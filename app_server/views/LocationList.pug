extends layout
include ./_include/outputRating
include ./_include/loopOfFacilities

block content
    #banner.page-header       
    .row
      .col-lg-6
        h1= pageHeader.title
         ssmall &nbsp;#{pageHeader.strapline}
    .row
      .col-xs-12.col-sm-8  
        .error=message                
        .row.list-group
         each loc in locations
          .col-xs-12.list-group-item                         
            h4
              - var str = "/location/"+loc._id                                     
              a(href=str)= loc.name  
              +outputRating(loc.rating)
            span.badge.pull-right.badge-pill.badge-danger=loc.distance       
            p Address: #{loc.address}      
            p                             
              +loopOfFacilities(loc.facilities)                   
                        

      .col-xs-12.col-sm-4   
        p.lead Looking for wifi and a seat Loc8r? helps you find places to work when out and about. Perhaps with coffee,cake or a pint? Let Loc8r help you find the place you're looking for.  
